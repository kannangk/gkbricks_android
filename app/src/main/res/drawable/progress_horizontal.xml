<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" />   <!-- Background color -->
            <corners android:radius="15dp" />   <!-- Rounded edges -->
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#3F51B5" />  <!-- Loading bar color -->
                <corners android:radius="15dp" />  <!-- Match background radius -->
            </shape>
        </clip>
    </item>
</layer-list>
